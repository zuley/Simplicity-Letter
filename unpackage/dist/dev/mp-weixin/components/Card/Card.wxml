<view class="m-card"><block wx:if="{{aspectFill}}"><image class="pic" src="{{pic}}" mode="aspectFill"></image></block><block wx:else><view class="pic"><view class="y">{{dateFormat.y+"年 "+dateFormat.m+"月"}}</view><view class="d">{{dateFormat.d}}</view></view></block><view class="box"><rich-text class="format" nodes="{{htmlNode}}"></rich-text></view><view class="zanlist"><view class="box"><block wx:for="{{zanList}}" wx:for-item="item" wx:for-index="__i0__"><image class="avatar" src="{{item.avatarUrl}}"></image></block></view><block wx:if="{{zanTatal>0}}"><view class="nums">{{zanTatal+"人觉得很赞"}}</view></block></view><view class="date">{{date}}</view><view class="tools"><block wx:if="{{!zanStatus}}"><view data-event-opts="{{[['tap',[['handleZan',['$event']]]]]}}" class="iconfont" bindtap="__e"></view></block><block wx:else><view data-event-opts="{{[['tap',[['handleCancelZan',['$event']]]]]}}" class="iconfont" bindtap="__e"></view></block><block wx:if="{{!starStatus}}"><view data-event-opts="{{[['tap',[['handleStar',['$event']]]]]}}" class="iconfont" bindtap="__e"></view></block><block wx:else><view data-event-opts="{{[['tap',[['handleCancelStar',['$event']]]]]}}" class="iconfont" bindtap="__e"></view></block><navigator class="icon" url="../../pages/user/user"><view class="iconfont"></view></navigator></view></view>